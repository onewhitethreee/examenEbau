{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "skipLibCheck": true,
    "noEmit": false,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo",
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["src/theme", "**/__tests__/**", "**/node_modules/**", "**/coverage/**", "**/lib/**/*", "**/__mocks__/**/*", "**/__fixtures__/**/*"]
}
